<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#00FFFFFF" />
        </shape>
    </item>



    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"  />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>